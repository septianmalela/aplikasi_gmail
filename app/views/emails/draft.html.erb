<br>
<h2>History Draft <%=current_user.name%></h2>
		<table id="example" class="display" style="width:100%">
		  <thead>
		    <tr>
		      <th scope="col">No</th>
		      <th scope="col">Penerima</th>
		      <th scope="col">Subject</th>
		      <th scope="col">tgl/jam ke draft</th>
		      <th scope="col">Action</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% i = 0 %>
		      <% @email.each do |s| %>
		      	<% if user_signed_in? %>
	          	  <% if current_user.id == s.user_id %>
	          	  	<% if (s.status == 'draft') %>
					    <tr>
						      <th scope="row"><%= i+=1 %></th>
						      <td><%= s.recipients %></td>
						      <td><%= s.subject %></td>
                  		  	  <td><%= s.updated_at.strftime("%d %B,%Y %H:%M") %></td>
                  		  	  <td><%= link_to "Edit Draft", edit_email_path(s.id), method: :patch,class: 'btn btn-warning' %></td>
					    </tr>
				  	<%end%>
				  <%end%>
			    <% end %>
		      <% end %>
		  </tbody>
		</table>