<br>
<h2>History Trash <%= current_user.name %></h2>

	<table id="example" class="display" style="width:100%">
	  <thead>
	    <tr>
	      <th scope="col">No</th>
	      <th scope="col">Pengirim</th>
	      <th scope="col">subject</th>
	      <th scope="col">tgl/jam ke trash</th>
	      <th scope="col">Action</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% i = 0 %>
	      <% @trash.each do |a| %>
			    <tr>
			      <th scope="row"><%= i+=1 %></th>
			      <th><%= a.user.email %></th>
			      <td><%= a.subject %></td>
          		  <td><%= a.updated_at.strftime("%d %B,%Y %H:%M") %></td>
          		  <td><%= link_to "Lihat Pesan", email_path(a), class: 'btn btn-primary' %></td>
			    </tr>
	      <% end %>
	  </tbody>
	</table>