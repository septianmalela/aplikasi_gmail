<br>
<h2>History Trash <%= current_user.name %></h2>

	<table id="example" class="display" style="width:100%">
	  <thead>
	    <tr>
	      <th scope="col">No</th>
	      <th scope="col">Subject</th>
	      <th scope="col">status</th>
	      <th scope="col">tgl/jam ke trash</th>
	      <th scope="col">Pengirim</th>
	      <th scope="col">Action</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% i = 0 %>
	      <% @trash.each do |s| %>
				    <tr>
					      <th scope="row"><%= i+=1 %></th>
					      <td><%= s.subject %></td>
					      <td><%= s.status %></td>
                  		  <td><%= s.updated_at.strftime("%d %B,%Y %H:%M") %></td>
                  		  <td><%= current_user.email %> </td>
                  		  <td><%= link_to "Lihat Pesan", email_path(s), class: 'btn btn-primary' %></td>
				    </tr>
	      <% end %>
	  </tbody>
	</table>