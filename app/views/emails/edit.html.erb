<%= form_for(@email) do |e| %><br>
<div class="form-group">
	
	<%= e.label :recipients %>
	<%= e.email_field :recipients, class: 'form-control col-md-5' %>

</div><br>

<div class="form-group">
	
	<%= e.label :subject %>
	<%= e.text_field :subject, class: 'form-control col-md-5' %>

</div><br>

<div class="form-group">
	
	<%= e.label :message %>
	<%= e.text_area :message, rows: 10, class: 'form-control col-md-5' %>

</div><br>

<div class="form-group">
	<%= e.submit "Kirim Pesan", class: 'btn btn-primary form-control col-md-2' %>
</div>

<% end %>