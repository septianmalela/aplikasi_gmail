<h2>Show Email</h2><br>
<div class="recipients">
	<h4>-----------Message-----------</h4>
	<h5> Dari <a style="padding-left: 45px;">: <b> <%= current_user.name %></b>  < <%= current_user.email %> ></a> </h5>
	<h5> Date <a style="padding-left: 40px;"></a>: <%= @email.updated_at.strftime("%d %B, %Y %H:%M") %></h5>
	<h5> Subject <a style="padding-left: 15px;"></a>: <%= @email.subject %> </h5>
	<h5> To <a style="padding-left: 60px;"></a>: <%= @email.recipients %> </h5><br><br>
	<h5> Message : <%= @email.message %> </h5>
	<h5>File <a style="padding-left: 50px;"></a> :  </h5><br>
	<% @post_attachments.each do |p| %>
	  <%= image_tag p.attachment_url %>
	<% end %>
	<% if @email.status == 'trash' %>
	<h5> Status <a style="padding-left: 25px;"></a> : <%=@email.status%> </h5>
	<% end %>
</div>
	